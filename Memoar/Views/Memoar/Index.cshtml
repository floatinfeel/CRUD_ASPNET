@model IEnumerable<Memoar>

@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />
<div class="container">
        <div class="row">
            
            <div class="col-6">
                <h2 class="text-secondary">Index Memoar</h2>
            </div>
            <div style="margin: 10px;" class="text-end">
                <a class="btn btn-primary text-end" asp-controller="Memoar" asp-action="Create"><i class="bi bi-plus-circle"></i>&nbsp;Create Memoar</a>
            </div>
        </div>

                      
        <div class="list-memoar">
             @foreach (var item in Model){

                 <div class="card" style="width: 18rem; margin: 5px; overflow-y: auto;">
                  <img src="https://data.whicdn.com/images/236022024/original.jpg" class="card-img-top" width="240" height="160" alt="...">
                  <div class="card-body">
                    <h4 class="card-title"> @item.Name</h4>
                    <p class="card-text"> @item.Quotation </p>
                    <a asp-controller="Memoar" asp-action="Edit" asp-route-id="@item.Id" 
                    class="btn btn-primary" style="width: 100px"> 
                    <i class="bi bi-pencil-square"></i> Edit</a> &nbsp;

                    <a asp-controller="Memoar" asp-action="Delete" asp-route-id="@item.Id" 
                    class="btn btn-danger" style="width: 100px">
                    <i class="bi bi-trash"></i>Delete</a>
                  </div>
                </div> 
                
         }
        </div>

           

</div>

